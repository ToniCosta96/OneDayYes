{% extends 'base.html.twig' %}

{% block body %}
{% set locale = app.request.getLocale() %}
<div class="contenidoJumbotron">
  <div id="demo" class="carousel slide central" data-ride="carousel">


    <ul class="carousel-indicators">
      <li data-target="#demo" data-slide-to="0" class="active"></li>
      <li data-target="#demo" data-slide-to="1"></li>
      <li data-target="#demo" data-slide-to="2"></li>
    </ul>


    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="img-responsive" src="{{ asset('/images/slide/3.jpg') }}" width="100%" height="100%">
        <div class="container">
          <div class="carousel-caption">
            <div class="cuadro">
            <h3 class="slidertitle">{% trans %}Socio{% endtrans %}</h3>
            <h1 class="slidertext">{% trans %}Colabora{% endtrans %}</h1>
            <a class="btn btn-large btn-primary" href="{{path('registro', { '_locale': locale })}}">{% trans %}Registrate ahora{% endtrans %}</a>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <picture>
          <source type="image/webp" srcset="images/slide/2.webp">
          <img class="img-responsive" src="/images/slide/2.jpg" width="100%" height="100%">
        </picture>
        <div class="container">
          <div class="carousel-caption">
            <div class="cuadro">
            <h3 class="slidertitle">{% trans %}Explora{% endtrans %}</h3>
            <h1 class="slidertext">{% trans %}Naturaleza{% endtrans %}</h1>
            <a class="btn btn-large btn-primary" href="{{path('galeria', { '_locale': locale })}}">{% trans %}Visita la galer√≠a{% endtrans %}</a>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <picture>
          <source type="image/webp" srcset="images/slide/1.webp">
          <img class="img-responsive" src="/images/slide/1.jpg" width="100%" height="100%">
        </picture>
        <div class="container">
          <div class="carousel-caption">
            <div class="cuadro">
            <h3 class="slidertitle">{% trans %}Ayudanos{% endtrans %}</h3>
            <h1 class="slidertext">{% trans %}Viaja{% endtrans %}</h1>
            <a class="btn btn-large btn-primary" href="{{path('ven_a_lamu', { '_locale': locale })}}">{% trans %}Viaja ahora{% endtrans %}</a>
            </div>
          </div>
        </div>
      </div>
    </div>


    <a class="carousel-control-prev" href="#demo" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
      <span class="carousel-control-next-icon"></span>
    </a>
  </div>
  <div class="container" style="margin-top: 80px">

    <div class="wow fadeIn"><p><span style="color:#608035;font-weight:bold;border:1px solid #8cc63f;padding:3px;">
