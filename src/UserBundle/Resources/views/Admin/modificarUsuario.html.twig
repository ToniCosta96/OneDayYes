{% extends 'base.html.twig' %}

{% block title %}Modificar usuario - One day yes{% endblock %}

{% block stylesheets %}
<link href="{{asset('css/styleAdminForm.css')}}" rel="stylesheet" type="text/css" media="all"/>
{% endblock %}

{% block body %}
<div class="contenido">
  <h2>Modificar usuario</h2>
    <p>
      Modificar datos del usuario <strong>{{usuario.name}}</strong>
      <br>Id: {{usuario.id}}
    </p>
    {{ form_start(form) }}
    <div class="form-group row col-xl-7 col-lg-10 col-12">
      {{ form_label(form.username, null, { 'label_attr': {'class': 'col-md-3 col-form-label'} }) }}
      <div class="col-md-9">{{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group row col-xl-7 col-lg-10 col-12">
      {{ form_label(form.name, null, { 'label_attr': {'class': 'col-md-3 col-form-label'} }) }}
      <div class="col-md-9">{{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group row col-xl-7 col-lg-10 col-12">
      {{ form_label(form.plainPassword.first, null, { 'label_attr': {'class': 'col-md-3 col-form-label'} }) }}
    <div class="col-md-9">{{ form_widget(form.plainPassword.first, { 'required': false, 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group row col-xl-7 col-lg-10 col-12">
      {{ form_label(form.plainPassword.second, null, { 'label_attr': {'class': 'col-md-3 col-form-label'} }) }}
      <div class="col-md-9">{{ form_widget(form.plainPassword.second, { 'required': false, 'attr': {'class': 'form-control'} }) }}</div>
      {% if not form.plainPassword.first.vars.valid %}
      <div class="alert alert-danger" role="alert">{{ form_errors(form.plainPassword.first) }}</div>
      {% endif %}
    </div>
    <div class="form-group row col-xl-7 col-lg-10 col-12">
      {{ form_label(form.email, null, { 'label_attr': {'class': 'col-md-3 col-form-label'} }) }}
      <div class="col-md-9">{{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group row col-xl-7 col-lg-10 col-12">
      {{ form_label(form.roles, null, { 'label_attr': {'class': 'col-md-3 col-form-label'} }) }}
      <div class="col-md-9">{{ form_widget(form.roles, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group row col-xl-7 col-lg-10 col-12">
      {{ form_widget(form.borrar, { 'attr': {'class': 'btn btn-secondary btn-resetear'} }) }}
      {{ form_widget(form.guardar, { 'label': 'Guardar cambios', 'attr': {'class': 'btn btn-primary btn-guardar"'} }) }}
    </div>
  {{ form_end(form) }}
</div>
{% endblock %}
