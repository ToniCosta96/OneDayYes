{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión - One day yes{% endblock %}
{% block stylesheets %}
<style media="screen">
.form-login {
  background: #eceeee;
  border: 1px solid #8cc63f;
  border-radius: 6px;
  height: 257px;
  margin: 20px auto 0;
  width: 298px;
}
</style>
{% endblock %}
{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="contenido">
  <center>
    <div class="col-xs-8 col-sm-8 col-md-12 col-lg-12 form-login">
    <img style="margin-bottom:50px; margin-top:10px;" src="/images/logo-oneDayYes_simplificado.png" alt="">
  <form action="{{ path('login') }}" method="post">

    <span class="form-control-feedback"><i class="fa fa-user bigicon" style="color: #8cc63f;"></i></span>
    <input type="text"  id="username" name="_username" value="{{ last_username }}" placeholder="Nombre Usuario" /><br>

    <span class="input-group-addon"><i class="fa fa-lock bigicon" style="color: #8cc63f;"></i></span>
    <input type="password" style="margin-top:20px;" id="password" name="_password" placeholder="Contraseña" /><br>

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <button type="submit" style="background: #8cc63f; border:none; margin-top:20px;">Iniciar sesión</button>
  </form>
</center>
</div>
</div>
{% endblock %}
